// варіант 6
void main() {
  const valueFrom = -4.0;
  const valueTo = 5.0;
  const step = 0.25;

  print("y = (x - 3) / (4 + x)\n");

  var x = valueFrom;

  while (x < valueTo) {
    // пропускаємо точку, де знаменник дорівнює нулю
    if (x == -4.0) {
      print("x = -4, y = -Infinity");
      x += step;
      continue;
    }

    final y = calc(x);
    print("x = $x, y = $y");
    x += step;
  }
}

double calc(double x) {
  return (x - 3) / (4 + x);
}

